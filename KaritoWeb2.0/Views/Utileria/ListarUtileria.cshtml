@model IEnumerable<CapaEntidad.EntUtileria>

@{
    Layout = "~/Views/shared/bAdmin.cshtml";
    ViewBag.Title = "Listar Utilería";
}

<h2>Lista de Utilería</h2>

<p>
    <a class="btn btn-sm btn-success" href="@Url.Action("InsertarUtileria")"><i class="fa fa-plus"></i> Agregar Utileríaa</a>
</p>

<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Nombre
            </th>
            <th>
                Color
            </th>
            <th>
                Anchor
            </th>
            <th>
                Largo
            </th>
            <th>
                Alto
            </th>
            <th>
                Stock
            </th>
            <th>
                Precio
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UtileriaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreUtileria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColorUtileria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ancho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Largo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockUtileria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioUtileria)
                </td>
                <td>
                    <a class="btn btn-sm btn-warning text-white" href="@Url.Action("EditarUtileria",new { item.UtileriaId })"><i class="fa fa-pencil"></i> Editar</a>
                    <a class="btn btn-sm btn-danger text-white" href="@Url.Action("BorrarUtileria",new { item.UtileriaId })"><i class="fa fa-trash-o"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section script{
    <script>
        $("#opc3").addClass("active");
    </script>
}