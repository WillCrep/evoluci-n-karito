@model IEnumerable<CapaEntidad.EntProveedor>

@{
    Layout = "~/Views/shared/bAdmin.cshtml";
    ViewBag.Title = "Listar Proveedor";
}

<h2>Listar Proveedores</h2>
<p>
    <a class="btn btn-sm btn-success" href="@Url.Action("InsertarProveedor")"><i class="fa fa-plus"></i> Agregar proveedor</a>
</p>
<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Nombre
            </th>
            <th>
                Celular
            </th>
            <th>
                Direccion
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProveedorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CelularProveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DireccionProveedor)
                </td>
                <td>

                    <a class="btn btn-sm btn-warning text-white" href="@Url.Action("EditarProveedor",new { item.ProveedorId })"><i class="fa fa-pencil"></i> Editar</a>
                    <a class="btn btn-sm btn-danger text-white" href="@Url.Action("BorrarProveedor",new { item.ProveedorId })"><i class="fa fa-trash-o"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section script{
    <script>
        $("#opc4").addClass("active");
    </script>
}