@model CapaEntidad.EntContrato

@{
    Layout = "~/Views/shared/bCte.cshtml";
    ViewBag.Title = "Personalizar Contrato -  Karito Scrap";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <input type="hidden" name="UsuarioId" value="@ViewBag.usuario.UsuarioId" />

    <h3>Personaliza tu Paquete</h3>

    <div class="form-group">
        <label>Fecha de Evento</label>
        <input type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" name="FrmFechaEvento" required />
    </div>
    <div class="form-group">
        <label>Seleccione temática</label>
        @Html.DropDownList("cboTematica", (SelectList)ViewBag.listaTematicas, new { @class = "form-control" })

    </div>
    <div class="row">
        <div class="col-6">
            <label>Seleccione servicio</label>
            @Html.ListBox("cboServicios", ViewBag.listaServicios as MultiSelectList, new { @class = "form-control" })
        </div>
        <div class="col-6">
            <label>Seleccione Utilería</label>
            @Html.ListBox("cboUtilerias", ViewBag.listaUtilerias as MultiSelectList, new { @class = "form-control" })

        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-sm btn-outline-secondary" href="../Home/IndexCliente"><i class="fa fa-step-backward"></i> Atrás</a>
        <button class="btn btn-sm btn-success" type="submit"><i class="fa fa-save"></i> Crear Paquete</button>

    </div>
}

@section script{
    <script>
        $("#opc1").addClass("active");
    </script>
}