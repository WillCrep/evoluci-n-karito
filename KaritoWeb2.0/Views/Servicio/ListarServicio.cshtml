@model IEnumerable<CapaEntidad.EntServicio>

@{
    Layout = "~/Views/shared/bAdmin.cshtml";
    ViewBag.Title = "Listar Servicio";
}

<h2>Lista de  Servicios</h2>

<p>
    <a class="btn btn-sm btn-success" href="@Url.Action("InsertarServicio")"><i class="fa fa-plus"></i> Agregar Servicio</a>
</p>
<table>
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
               Nombre
            </th>
            <th>
               Precio
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServicioId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreServicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioServicio)
                </td>
                <td>


                    <a class="btn btn-sm btn-warning text-white" href="@Url.Action("EditarServicio",new { item.ServicioId })"><i class="fa fa-pencil"></i> Editar</a>
                    <a class="btn btn-sm btn-danger text-white" href="@Url.Action("BorrarServicio",new { item.ServicioId })"><i class="fa fa-trash-o"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@section script{
    <script>
        $("#opc2").addClass("active");
    </script>
}